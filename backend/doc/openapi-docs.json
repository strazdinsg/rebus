{
  "components": {
    "schemas": {
      "AnswerDto": {
        "description": "Answer for one specific challenge (one specific team)",
        "properties": {
          "answer": {
            "description": "The answer text",
            "example": "Hello World",
            "type": "string"
          },
          "challengeId": {
            "description": "ID of the challenge",
            "example": 123,
            "format": "int32",
            "type": "integer"
          },
          "score": {
            "description": "Score given by the grader",
            "example": 10,
            "format": "int32",
            "type": "integer"
          }
        },
        "required": ["challengeId"],
        "type": "object"
      },
      "AuthenticationRequest": {
        "description": "Data that the user sends in the login request",
        "properties": {
          "pin": {
            "description": "The PIN code of the user (team)",
            "type": "string"
          }
        },
        "required": ["pin"],
        "type": "object"
      },
      "AuthenticationResponse": {
        "description": "Response of a successful authentication",
        "properties": {
          "jwt": {
            "description": "JWT token",
            "type": "string"
          }
        },
        "required": ["jwt"],
        "type": "object"
      },
      "ChallengeDto": {
        "description": "Challenge data",
        "properties": {
          "id": {
            "description": "ID of the challenge",
            "example": 1,
            "format": "int32",
            "type": "integer"
          },
          "maxScore": {
            "description": "Max score for this challenge",
            "example": 100,
            "format": "int32",
            "type": "integer"
          },
          "question": {
            "description": "The question of the challenge",
            "example": "What is the capital of France?",
            "type": "string"
          }
        },
        "required": ["id", "question"],
        "type": "object"
      },
      "HttpResponseDtoAuthenticationResponse": {
        "description": "Response from the server",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/AuthenticationResponse"
          },
          "message": {
            "description": "A message explaining the response, in case of errors",
            "type": "string"
          },
          "status": {
            "description": "Response status: success or error",
            "enum": ["SUCCESS", "ERROR"],
            "type": "string"
          }
        },
        "type": "object"
      },
      "HttpResponseDtoListChallengeDto": {
        "description": "Response from the server",
        "properties": {
          "data": {
            "description": "The data that the server will send in the response, can be null",
            "items": {
              "$ref": "#/components/schemas/ChallengeDto"
            },
            "type": "array"
          },
          "message": {
            "description": "A message explaining the response, in case of errors",
            "type": "string"
          },
          "status": {
            "description": "Response status: success or error",
            "enum": ["SUCCESS", "ERROR"],
            "type": "string"
          }
        },
        "type": "object"
      },
      "HttpResponseDtoListShortTeamAnswerDto": {
        "description": "Response from the server",
        "properties": {
          "data": {
            "description": "The data that the server will send in the response, can be null",
            "items": {
              "$ref": "#/components/schemas/ShortTeamAnswerDto"
            },
            "type": "array"
          },
          "message": {
            "description": "A message explaining the response, in case of errors",
            "type": "string"
          },
          "status": {
            "description": "Response status: success or error",
            "enum": ["SUCCESS", "ERROR"],
            "type": "string"
          }
        },
        "type": "object"
      },
      "HttpResponseDtoListTeamDto": {
        "description": "Response from the server",
        "properties": {
          "data": {
            "description": "The data that the server will send in the response, can be null",
            "items": {
              "$ref": "#/components/schemas/TeamDto"
            },
            "type": "array"
          },
          "message": {
            "description": "A message explaining the response, in case of errors",
            "type": "string"
          },
          "status": {
            "description": "Response status: success or error",
            "enum": ["SUCCESS", "ERROR"],
            "type": "string"
          }
        },
        "type": "object"
      },
      "HttpResponseDtoString": {
        "description": "Response from the server",
        "properties": {
          "data": {
            "description": "The data that the server will send in the response, can be null",
            "type": "string"
          },
          "message": {
            "description": "A message explaining the response, in case of errors",
            "type": "string"
          },
          "status": {
            "description": "Response status: success or error",
            "enum": ["SUCCESS", "ERROR"],
            "type": "string"
          }
        },
        "type": "object"
      },
      "HttpResponseDtoTeamAnswerDto": {
        "description": "Response from the server",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/TeamAnswerDto"
          },
          "message": {
            "description": "A message explaining the response, in case of errors",
            "type": "string"
          },
          "status": {
            "description": "Response status: success or error",
            "enum": ["SUCCESS", "ERROR"],
            "type": "string"
          }
        },
        "type": "object"
      },
      "MyAnswerDto": {
        "description": "Our team's answer for one specific challenge",
        "properties": {
          "answer": {
            "description": "The answer text",
            "example": "Hello World",
            "type": "string"
          },
          "challengeId": {
            "description": "ID of the challenge",
            "example": 123,
            "format": "int32",
            "type": "integer"
          }
        },
        "required": ["challengeId"],
        "type": "object"
      },
      "ShortTeamAnswerDto": {
        "description": "Team answers, in a short form",
        "properties": {
          "answers": {
            "description": "List of answers to all challenges for the team",
            "items": {
              "description": "List of answers to all challenges for the team",
              "type": "string"
            },
            "type": "array"
          },
          "scores": {
            "description": "Scores for each answer",
            "items": {
              "description": "Scores for each answer",
              "format": "int32",
              "type": "integer"
            },
            "type": "array"
          },
          "teamId": {
            "description": "ID of the team",
            "example": 1,
            "format": "int32",
            "type": "integer"
          }
        },
        "required": ["answers", "scores", "teamId"],
        "type": "object"
      },
      "SingleScoreDto": {
        "description": "A single score",
        "properties": {
          "score": {
            "description": "The score for the answer",
            "example": 10,
            "format": "int32",
            "type": "integer"
          }
        },
        "required": ["score"],
        "type": "object"
      },
      "TeamAnswerDto": {
        "description": "Answers to all challenges for a particular team",
        "properties": {
          "answers": {
            "description": "List of answers to all challenges for the team",
            "items": {
              "$ref": "#/components/schemas/AnswerDto"
            },
            "type": "array"
          },
          "teamId": {
            "description": "ID of the team",
            "example": 1,
            "format": "int32",
            "type": "integer"
          }
        },
        "required": ["answers", "teamId"],
        "type": "object"
      },
      "TeamDto": {
        "description": "The data that the server will send in the response, can be null",
        "properties": {
          "id": {
            "description": "ID of the team",
            "format": "int32",
            "type": "integer"
          },
          "name": {
            "description": "Name of the team",
            "type": "string"
          }
        },
        "required": ["id", "name"],
        "type": "object"
      }
    },
    "securitySchemes": {
      "bearer-key": {
        "bearerFormat": "JWT",
        "scheme": "bearer",
        "type": "http"
      }
    }
  },
  "info": {
    "title": "Rebus backend",
    "version": "2.0.0"
  },
  "openapi": "3.0.1",
  "paths": {
    "/answers": {
      "get": {
        "operationId": "getAllAnswers",
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/HttpResponseDtoListShortTeamAnswerDto"
                }
              }
            },
            "description": "OK, list of all answers"
          },
          "403": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Must log in as admin",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Forbidden, no access to answer listing"
          }
        },
        "summary": "Get all answers",
        "tags": ["Admin endpoints"]
      }
    },
    "/answers/my": {
      "get": {
        "operationId": "getMyAnswers",
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/HttpResponseDtoTeamAnswerDto"
                }
              }
            },
            "description": "OK, answers of the currently logged-in user"
          },
          "401": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Must log in",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Unauthorized, must log in"
          }
        },
        "summary": "Get answers of the currently logged-in user",
        "tags": ["User endpoints"]
      }
    },
    "/answers/{challengeId}/{userId}": {
      "post": {
        "operationId": "postAnswer",
        "parameters": [
          {
            "in": "path",
            "name": "challengeId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          },
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MyAnswerDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Answer posted",
                    "status": "SUCCESS"
                  },
                  "type": "string"
                }
              }
            },
            "description": "OK, answer posted"
          },
          "403": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Error message",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Forbidden"
          }
        },
        "summary": "Post an answer to a challenge",
        "tags": ["User endpoints"]
      }
    },
    "/authenticate": {
      "post": {
        "description": "Log in with a PIN code. The PIN code is unique for each team.",
        "operationId": "authenticate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthenticationRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/HttpResponseDtoAuthenticationResponse"
                }
              }
            },
            "description": "OK, Authentication response as data"
          },
          "401": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": null,
                    "message": "Invalid PIN",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Unauthorized, invalid PIN, null data"
          }
        },
        "summary": "Log in",
        "tags": ["Public endpoints"]
      }
    },
    "/challenges": {
      "get": {
        "operationId": "getAllChallenges",
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/HttpResponseDtoListChallengeDto"
                }
              }
            },
            "description": "OK"
          }
        },
        "summary": "Get all challenges",
        "tags": ["Public endpoints"]
      }
    },
    "/pictures/{challengeId}/{userId}": {
      "delete": {
        "operationId": "deletePicture",
        "parameters": [
          {
            "in": "path",
            "name": "challengeId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          },
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "",
                    "status": "SUCCESS"
                  },
                  "type": "string"
                }
              }
            },
            "description": "OK, image deleted"
          },
          "403": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Not allowed to access images of other teams",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Forbidden, not allowed to access images of other teams"
          },
          "404": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Image not found",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Not found, Image not found"
          }
        },
        "summary": "Delete an image submitted as an answer to a challenge by a team",
        "tags": ["User endpoints"]
      },
      "get": {
        "operationId": "getPicture",
        "parameters": [
          {
            "in": "path",
            "name": "challengeId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          },
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/octet-stream": {
                "schema": {
                  "format": "byte",
                  "type": "string"
                }
              }
            },
            "description": "OK, image content in the body"
          },
          "403": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpResponseDtoString"
                }
              }
            },
            "description": "Forbidden, not allowed to access images of other teams"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpResponseDtoString"
                }
              }
            },
            "description": "Not found, image not found"
          }
        },
        "summary": "Get image submitted as an answer to a challenge by a team",
        "tags": ["User endpoints"]
      },
      "post": {
        "operationId": "uploadPicture",
        "parameters": [
          {
            "in": "path",
            "name": "challengeId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          },
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "fileContent": {
                    "format": "binary",
                    "type": "string"
                  }
                },
                "required": ["fileContent"],
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "123",
                    "message": "",
                    "status": "SUCCESS"
                  },
                  "type": "string"
                }
              }
            },
            "description": "OK, Image ID in the body"
          },
          "400": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Could not store image",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Bad request, something went wrong with storing the image"
          },
          "403": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Not allowed to upload images for other teams",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Forbidden, not allowed to upload images for other teams"
          }
        },
        "summary": "Upload an image to the server",
        "tags": ["User endpoints"]
      }
    },
    "/score/{challengeId}/{userId}": {
      "post": {
        "operationId": "setScore",
        "parameters": [
          {
            "in": "path",
            "name": "challengeId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          },
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "format": "int32",
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SingleScoreDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/HttpResponseDtoString"
                }
              }
            },
            "description": "OK, score set"
          },
          "403": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Must log in as admin",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Forbidden, no access"
          }
        },
        "summary": "Set score for a specific team, specific challenge",
        "tags": ["Admin endpoints"]
      }
    },
    "/teams": {
      "get": {
        "operationId": "getAllTeams",
        "responses": {
          "200": {
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/HttpResponseDtoListTeamDto"
                }
              }
            },
            "description": "OK, list of all teams"
          },
          "403": {
            "content": {
              "*/*": {
                "schema": {
                  "example": {
                    "data": "",
                    "message": "Must log in as admin",
                    "status": "ERROR"
                  },
                  "type": "string"
                }
              }
            },
            "description": "Forbidden, no access to team listing"
          }
        },
        "summary": "Get all teams",
        "tags": ["Admin endpoints"]
      }
    }
  },
  "security": [
    {
      "bearer-key": []
    }
  ],
  "servers": [
    {
      "description": "Generated server url",
      "url": "http://localhost:8080"
    }
  ]
}
